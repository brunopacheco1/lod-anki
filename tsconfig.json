{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "lib": [
            "ES6",
            "ES2015",
            "ESNext"
        ],
        "types": [
            "reflect-metadata",
            "node"
        ],
        "outDir": "lib",
        "rootDir": "src",
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "importHelpers": true,
        "removeComments": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "baseUrl": "./src",
        "paths": {
            "@services/*": [
                "services/*"
            ],
            "@model/*": [
                "model/*"
            ],
            "@controllers/*": [
                "controllers/*"
            ],
            "@resources/*": [
                "resources/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "lib",
        "tests",
        "templates"
    ]
}