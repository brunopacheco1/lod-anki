{
  "name": "lod-anki",
  "version": "0.2.0",
  "description": "Export words to Anki dictionaries",
  "main": "./lib/index.js",
  "bin": {
    "lod-anki": "./lib/index.js"
  },
  "scripts": {
    "start": "npm run build && npm run global",
    "watch": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "mocha -r ts-node/register tests/**/*.spec.ts",
    "lint": "eslint --fix ./**/*.ts",
    "copy:resources": "copyfiles -u 1 'src/resources/**' 'lib'",
    "build": "npm run clean:some && tsc -p . && npm run copy:resources",
    "global": "npm i -g && lod-anki",
    "clean:some": "rm -rf ./lib ./docs",
    "clean:all": "rm -rf ./node_modules ./package-lock.json ./lib ./docs",
    "refresh": "npm run clean:all && npm install",
    "tscov": "tscov --min-coverage 90",
    "tscov:d": "tscov --details",
    "publish-package": "npm run build && npm publish",
    "docs": "typedoc --out docs ./src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/brunopacheco1/lod-anki.git"
  },
  "keywords": [
    "LOD.lu",
    "Anki",
    "cli",
    "community",
    "generator"
  ],
  "author": "brunopacheco1",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/brunopacheco1/lod-anki/issues"
  },
  "homepage": "https://github.com/brunopacheco1/lod-anki#readme",
  "devDependencies": {
    "@liftr/tscov": "^2.0.0",
    "@types/chai": "^4.3.0",
    "@types/ejs": "^3.1.0",
    "@types/figlet": "^1.5.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "^17.0.21",
    "@types/xml2js": "^0.4.9",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "chai": "^4.3.6",
    "copyfiles": "^2.4.1",
    "eslint": "^8.9.0",
    "mocha": "^9.2.1",
    "nodemon": "^2.0.15",
    "ts-node": "^10.5.0",
    "typedoc": "^0.22.12",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "anki-apkg-export": "^4.0.3",
    "clear": "^0.1.0",
    "commander": "^9.0.0",
    "ejs": "^3.1.6",
    "figlet": "^1.5.2",
    "inversify": "^6.0.1",
    "kleur": "^4.1.4",
    "module-alias": "^2.2.2",
    "reflect-metadata": "^0.1.13",
    "sql.js": "^1.6.2",
    "tslib": "^2.3.1",
    "xml2js": "^0.4.23"
  },
  "_moduleAliases": {
    "@services": "lib/services",
    "@model": "lib/model",
    "@controllers": "lib/controllers",
    "@resources": "lib/resources"
  }
}
